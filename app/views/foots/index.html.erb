<%= render "shared/header" %>
<div class='main'>
 
  <div class='m-size'>
  <div class='title-contents'>
      <h2 class='service-title'>
        FootScoring
      </h2>
      <p class='service-explain'>
        ユーザー同士で
      </p>
      <p class='service-explain'>
        試合を採点しよう！！！
      </p>
  </div>
  </div>

  <div class='item-contents'>
      <h2 class='title'>最新情報</h2>
      <%= link_to '試合結果', "#", class: "subtitle" %>
  </div>

  <div class= 'game'>
  <% @foots.each do |foot| %>
    <div class='sss'>
    <div class='time'>
      <%= foot.created_at.to_s(:datetime_jp) %>
    </div>
    <div class='foot-img-content'>
      <% foot.images.each do |image| %>
      <%= image_tag image.variant(resize: '100x100'), class: 'm-images'%>
      <% end %> 
    </div>

    <%= link_to foot_path(foot.id) do %>
    <div class='team-name'>
      <div class='item-name'>
        <%= foot.ateam %>
      </div>
      <div class='ttt'>VS</div>
      <div class='item-name'>
        <%= foot.bteam %>
      </div>
    </div>
    <% end %>
    <div class='foot-name'>
      <div class='away-name'>
        <%= foot.ascore_id %>
      </div>
      <h2 class='yyy'>ー</h2>
      <div class='away-name'>
        <%= foot.bscore_id %>
      </div>
    </div>
    </div>
  <% end %>
  </div>
</div>







<% if user_signed_in? %>
  <% if current_user == @user || current_user.admin? %>
    <%= link_to new_foot_path do%> 
    <div class='purchase-btn'>
      <span class='purchase-btn-text'>結果投稿</span>
    <%= image_tag 'soccer.png' , size: '185x50' ,class: "purchase-btn-icon" %>
    </div>
    <% end %>
  <% end %>
<% end %>



